generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
  FAILED
  SUCCESS
}

enum TransactionCategory {
  AIRTIME
  DSTV
  ELECTRICITY
  DATA
}


model Transaction {
  id    Int     @default(autoincrement()) @id
  paymentReference String @unique() // request reference
  category TransactionCategory // airtime, dstv, etc
  number String // phone number or dstv number
  status TransactionStatus? // pending, approved, rejected
  amount Int // amount in naira
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}